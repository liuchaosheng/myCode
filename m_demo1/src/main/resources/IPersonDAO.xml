<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.zylearn.maven.mybatisdemo.m_demo1.dao.IPersonDAO">
	<!-- public boolean doCreate(Person vo) ; -->
	<insert id="doCreate" useGeneratedKeys="true" keyProperty="pid">
		insert into person(name,age,sal,note) values(#{name},#{age},#{sal},#{note})
	</insert>
	
	<!-- public Person findById(Integer id) ; -->
	<select id="findById" resultType="club.zylearn.maven.mybatisdemo.m_demo1.vo.Person">
		select * from person where pid=#{id}
	</select>
	
	<!-- public boolean doRemove(Integer id) ; -->
	<delete id="doRemove">
		delete from person where pid=#{id}
	</delete>
	
	<!-- public boolean doUpdate(Person vo) ; -->
	<update id="doUpdate">
		update person set name=#{name},age=#{age},sal=#{sal},note=#{note} where pid=#{pid}
	</update>
	
	<!-- public List<Person> findAll() ; -->
	<select id="findAll" resultType="club.zylearn.maven.mybatisdemo.m_demo1.vo.Person">
		select * from person
	</select>
	
</mapper>